{
  "name": "node-run-webpack-plugin",
  "description": "Node run Webpack plugin",
  "keywords": ["node", "webpack", "watch"],
  "author": "Arseny Razin <spufru@gmail.com>",
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/spuf/node-run-webpack-plugin",
    "type": "git"
  },
  "files": ["dist"],
  "main": "dist/NodeRunWebpackPlugin.js",
  "peerDependencies": {
    "webpack": ">=3"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "prettier": "prettier --write 'src/**/*' 'example/webpack.config.js'",
    "clean": "rimraf dist example/build"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "@types/webpack": "^3.0.14",
    "jest": "^21.2.1",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.1.4",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/__tests__/**/*.ts"],
    "moduleFileExtensions": ["ts", "js", "json"],
    "mapCoverage": true
  }
}
